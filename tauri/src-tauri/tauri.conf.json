{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "emuBro",
  "version": "0.1.0",
  "identifier": "com.emubro.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "emuBro",
        "width": 1400,
        "height": 860,
        "minWidth": 980,
        "minHeight": 620,
        "resizable": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false
  }
}
